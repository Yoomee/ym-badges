.center
  -badge_id_and_count = user.badges.count(:group => ["badges.id"])
  -badge_id_and_count.each do |badge_id, count|
    -badge = Badge.find(badge_id)
    .badge-link
      =link_to "#badge#{badge_id}", :data => {:toggle => 'modal'} do
        -if badge.image
          =image_for(badge, '150x')
        -else
          =image_for(badge, '150x', :class => 'img-circle mb-2')
        -if count > 1
          .badge-count
            ="x#{count}"
    =render "badges/show_modal", :badge => badge, :times_won => count, :user => user
    %br