.new-badge.modal.fade.hide
  .modal-header
    %button.close{:"data-dismiss" => 'modal', :"aria-hidden" => true} &times;
    %h3
      =badges.size > 1 ? "You've won #{badges.size} new badges!" : "You've won a new badge!"
  .modal-body
    .carousel#badge-carousel
      .carousel-inner
        -badges.each_with_index do |badge, idx|
          .row-fluid.item.mb-2{:id => "badge-award-modal-#{idx}", :class => "#{idx == 0 ? "active" : ""}"}
            .span3
              -if badge.image
                =image_for(badge, '150x')
              -else
                =image_for(badge, '150x', :class => 'img-circle pull-left mr-1')
            .span9
              =simple_format(badge.award_message)
      -if badges.size > 1
        =link_to "&lsaquo;".html_safe, "#badge-carousel", :class => "carousel-control award-badge-carousel left", :data => {:slide => "prev"}
        =link_to "&rsaquo;".html_safe, "#badge-carousel", :class => "carousel-control award-badge-carousel right", :data => {:slide => "next"}
  .modal-footer
    =link_to('Close', '#', :class => "btn", :id => "badge_announcement_close", :"data-dismiss" => 'modal', :"aria-hidden" => true)